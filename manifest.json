{
  "manifest_version": 3,
  "name": "FactFusion",
  "version": "1.0",
  "description": "A Chrome extension for creating summaries and fact checking them",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api-inference.huggingface.co/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
